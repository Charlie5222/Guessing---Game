<!DOCTYPE html>
<html>
<head>
  <title>Guessing Game</title>
</head>
<body>
<h1>Guessing Game</h1>
<p>I'm thinking of a number between 1 and 100...</p>
<input type="number" id="guessInput" />
<button onclick="checkGuess()">Guess</button>
<p id="output"></p>

<script>
  let secretNumber = Math.floor(Math.random() * 100) + 1;
  let attempts = 0;

  function checkGuess() {
    const guess = parseInt(document.getElementById("guessInput").value);
    const output = document.getElementById("output");
    attempts++;

    if (guess < secretNumber) {
      output.textContent = "Too low, try again.";
    } else if (guess > secretNumber) {
      output.textContent = "Too high, try again.";
    } else {
      let message = `You got the number! You guessed it in ${attempts} attempts. `;
      if (attempts <= 5) {
        const prize = Math.floor(Math.random() * 9001) + 1000;
        message += `Congrats! You win $${prize}.`;
      } else {
        message += `Nice try, but no prize money for you.`;
      }
      output.textContent = message;
    }
  }
</script>
</body>
</html>
